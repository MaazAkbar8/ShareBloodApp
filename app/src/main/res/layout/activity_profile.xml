<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/viewgroup_bg"
    android:id="@+id/Main_container"
    tools:context=".profileActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/chid_Contaner">



        <TextView
            android:id="@+id/tvhome"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:background="#A53737"
            android:paddingStart="165dp"
            android:paddingTop="10dp"
            android:text="profile"
            android:textColor="@color/black"
            android:textSize="23sp"
            android:textStyle="bold|italic" />



        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/person_svgrepo_com"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="110dp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_image"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/person_svgrepo_com"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:text="name"
            android:textSize="18dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tv_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:drawableStart="@drawable/map_pin_alt_svgrepo_com"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp"
            android:drawablePadding="10dp"
            android:layout_marginTop="7dp"
            android:text="city"
            android:textSize="18dp"
            android:textColor="@color/black"/>



        <TextView
            android:id="@+id/tv_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_city"
            android:layout_alignParentStart="true"
            android:drawableStart="@drawable/call_medicine_rounded_svgrepo_com"
            android:layout_marginStart="5dp"
            android:drawablePadding="10dp"
            android:layout_marginTop="7dp"
            android:text="contact"
            android:textSize="18dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="email"
            android:textSize="18dp"
            android:drawableStart="@drawable/email_1_svgrepo_com"
            android:layout_marginStart="5dp"
            android:drawablePadding="10dp"
            android:layout_below="@+id/tv_contact"
            android:textColor="@color/black"
            android:layout_marginTop="7dp"/>



        <Button
            android:id="@+id/logout_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_below="@id/tv_email"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"/>

        <Button
            android:id="@+id/Active_not_btn"
            android:layout_width="188dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/logout_button"
            android:layout_marginStart="120dp"
            android:layout_marginTop="20dp"
            android:text="@string/active_not_active"
            android:textColor="@color/black"
            android:textAllCaps="false"
             android:textSize="16dp"
            android:textStyle="bold"
            android:background="@drawable/view_bg_shape"

             />


    </RelativeLayout>
</RelativeLayout>