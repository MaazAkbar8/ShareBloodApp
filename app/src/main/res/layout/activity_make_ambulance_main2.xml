<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/viewgroup_bg"
    tools:context=".makeAmbulanceMainActivity2">

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Add Embulance"
    android:textSize="30sp"
    android:layout_gravity="center"
    android:layout_marginTop="30sp"
    android:textStyle="bold|italic"
    android:textColor="#8a0303"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:layout_marginTop="10sp"
        app:cardCornerRadius="15dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/view_bg_shape"
        android:padding="80dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="14sp">


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11sp">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_number"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/view_bg_shape"
                    android:drawableStart="@drawable/person_svgrepo_com"
                    android:drawablePadding="5dp"
                    android:hint=" mobile No"
                    android:maxLength="11"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="18sp" />
            </com.google.android.material.textfield.TextInputLayout>
            <!-- registerno-->

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_registeration"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/view_bg_shape"
                    android:drawableStart="@drawable/license_plate_svgrepo_com"
                    android:drawablePadding="5dp"
                    android:hint=" RegNo."
                    android:inputType="textPersonName"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="18sp" />
            </com.google.android.material.textfield.TextInputLayout>


            <!--city-->
            <com.google.android.material.textfield.TextInputLayout

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:hint="city">

                <AutoCompleteTextView
                    android:id="@+id/et_city"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"

                    android:background="@drawable/view_bg_shape"
                    android:drawableStart="@drawable/location_svgrepo_com"
                    android:drawablePadding="7dp"
                    android:inputType="none"
                    android:textColor="@color/black"
                    android:textSize="18sp" />


            </com.google.android.material.textfield.TextInputLayout>

            <!--bloodgroup-->


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               android:layout_marginTop="10sp">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_hospital"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/view_bg_shape"
                    android:drawableStart="@drawable/hospital_svgrepo_com"
                    android:drawablePadding="7dp"
                    android:hint=" Hospital"
                    android:inputType="textPersonName"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="18sp" />
            </com.google.android.material.textfield.TextInputLayout>




            <TextView
                android:id="@+id/tvRegister"
                android:layout_width="171dp"
                android:layout_height="47dp"
                android:layout_gravity="center"
                android:layout_marginTop="21sp"
                android:background="@drawable/view_bg_shape"
                android:paddingStart="40sp"
                android:paddingTop="8sp"
                android:text="Register"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>