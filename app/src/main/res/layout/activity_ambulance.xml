<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center"
    android:background="@drawable/viewgroup_bg"
    android:layout_height="match_parent"
    tools:context=".AmbulanceActivity">


    <LinearLayout
        android:id="@+id/lv2"
        android:orientation="vertical"
        android:layout_centerHorizontal="false"
        android:layout_below="@+id/title"
        android:layout_marginStart="35dp"
        android:layout_width="356dp"
        android:visibility="gone"
        android:layout_height="wrap_content"
        >


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/search"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="365dp"
            android:layout_height="match_parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etsearch2"
                android:layout_width="303dp"
                android:layout_height="43dp"
                android:layout_marginStart="51dp"
                android:layout_marginBottom="10sp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/searchview_bg"
                android:drawablePadding="8dp"
                android:hint=" search...."
                android:padding="10dp"
                android:paddingStart="32sp"
                android:textColor="@color/black"
                android:textColorHint="@color/black" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>


<TextView
    android:id="@+id/title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Ambulance!"
    android:textSize="24sp"
    android:textStyle="bold|italic"
    android:textColor="#8a0303"
    android:layout_marginStart="18sp"
    android:layout_marginTop="20sp"/>


    <TextView
        android:id="@+id/search_icon"
        android:layout_width="63dp"
        android:layout_height="43dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="-27dp"
        android:drawableStart="@drawable/search_plus_svgrepo_com" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Rcv2"
        android:layout_width="376dp"
        android:layout_height="776dp"
        android:layout_above="@id/tvAds2"
        android:layout_below="@id/lv2"
        android:layout_centerInParent="true"
        android:layout_marginStart="12sp"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="12sp"
        android:layout_marginBottom="0dp" />

    <TextView
        android:id="@+id/tvAds2"
        android:layout_width="354dp"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"

        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="76dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/ads_bg_shape"
        android:padding="16dp"
        android:text="For Ads"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold|italic" />


    <TextView
        android:id="@+id/Add_Donar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"


        android:layout_marginEnd="-11dp"
        android:layout_marginBottom="-11dp"
        android:drawableStart="@drawable/add_circle_svgrepo_com" />


</RelativeLayout>