<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A86D6D"
    tools:context=".MainActivity">
    

    <LinearLayout
        android:id="@+id/lv"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/Toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:padding="5dp"
        android:text=" Location"
        android:textColor="#EAE4E4"
        android:drawableTop="@drawable/baseline_location_on_24"
        android:textAlignment="gravity"
        android:layout_margin="8dp"
        app:drawableTint="#EFE9E9" />

    </LinearLayout>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/Toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="Shareblood"
       app:menu="@menu/app_bar_menu"
        android:background="#8a0303"
        app:titleTextColor="@color/white"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Rcv1"
        android:layout_below="@id/lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_above="@id/makedonar"/>

    <TextView
        android:id="@+id/makedonar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Make Donar"
        android:textStyle="bold"

        android:textSize="16sp"
        android:textColor="@color/white"
        android:padding="16dp"
        android:textAlignment="center"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12sp"
        android:background="@drawable/boarder_m"
        android:backgroundTint="@color/purple_500"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5sp"/>


    

</RelativeLayout>